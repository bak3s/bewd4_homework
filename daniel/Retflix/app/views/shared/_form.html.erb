<%= form_for @movie, html: { class: 'well' } do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 10, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :year_released %>
    <%= f.text_field :year_released, class: 'form-control' %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>
