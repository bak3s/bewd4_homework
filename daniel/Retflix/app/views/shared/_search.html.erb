<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <form method="get" action="/search">
          <div class="form-group">
            <%= text_field_tag :query, params[:query], class: 'form-control' %>
          </div>
          <%= submit_tag "Search", name: nil, class: 'btn btn-default' %>
        </form>
      </div>
    </div>
  </div>
</div>