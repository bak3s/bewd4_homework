<%= form_for @movie, html: {class: 'form well'} do |f| %>

<div class = "form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control'%>
</div>
<div class = "form-group">
  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control'%>
</div>
<div class = "form-group">
 <div class="row">
  <div class="col-sm-3">
    <%= f.label :year_released %>
    <%= f.text_field :year_released, class: 'form-control'%>
  </div>
 </div>
</div>

<%= f.submit  'Save', class: 'btn btn-primary' %>

<%end%>
